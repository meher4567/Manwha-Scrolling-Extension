{
  "manifest_version": 3,
  "name": "Smart Scroll",
  "version": "0.2.0",
  "description": "Intelligent scrolling for long-form visual content",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "smart-scroll@extension.local",
      "strict_min_version": "109.0"
    }
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  
  "options_page": "src/options/options.html"
}
